{
  "name": "grove-serial-server",
  "version": "1.0.0",
  "scripts": {
  "build:css": "npx tailwindcss -i ./public/tailwind.css -o ./dist/public/tailwind.css --minify",
  "dev:css": "npx tailwindcss -i ./public/tailwind.css -o ./dist/public/tailwind.css --watch --poll",
  "build:ts": "tsc",
  "build:html": "mkdir -p dist/public && cp public/*.html dist/public",
  "build": "npm run build:css && npm run build:ts && npm run build:html",
  "dev": "concurrently \"npm run dev:css\" \"npm run build:ts -- --watch\" \"npm run dev:server\"",
  "dev:server": "nodemon dist/src/index.js --watch dist/src",
  "start": "node dist/src/index.js"
},

  "dependencies": {
    "express": "^4.18.2",
    "serialport": "^11.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "browser-sync": "^3.0.3",
    "concurrently": "^9.0.1",
    "nodemon": "^3.1.7",
    "shelljs": "^0.8.5",
    "tailwindcss": "^3.0.0",
    "typescript": "^5.0.0"
  }
}
