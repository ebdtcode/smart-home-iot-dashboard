{
  "name": "grove-serial-server",
  "version": "1.0.0",
  "scripts": {
    "build:css": "npx tailwindcss -i ./public/tailwind.css -o ./dist/public/tailwind.css --minify",
    "build:ts": "tsc",
    "build": "npm run build:css && npm run build:ts && mkdir -p dist/public && cp public/index.html dist/public",
    "start": "node dist/src/index.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "serialport": "^11.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "browser-sync": "^3.0.3",
    "concurrently": "^9.0.1",
    "nodemon": "^3.1.7",
    "tailwindcss": "^3.0.0",
    "typescript": "^5.0.0"
  }
}
