{
  "name": "grove-serial-server",
  "version": "1.0.0",
  "scripts": {
    "clean": "rm -rf dist && mkdir -p dist/public/js",
    "build:css": "npx tailwindcss -i ./public/tailwind.css -o ./dist/public/tailwind.css --minify",
    "build:ts:backend": "tsc -p tsconfig.backend.json",
    "build:ts:frontend": "tsc -p tsconfig.frontend.json",
    "build:html": "cp -r public/*.html dist/public/",
    "copy:frontend": "mkdir -p dist/public/js && cp -r public/js/* dist/public/js/",
    "prebuild": "npm run clean",
    "build": "npm run build:ts:backend && npm run build:ts:frontend && npm run build:css && npm run build:html && npm run copy:frontend",
    "start": "node dist/index.js",
    "dev": "concurrently \"npm run dev:css\" \"npm run watch:backend\" \"npm run watch:frontend\" \"npm run dev:server\"",
    "dev:server": "nodemon dist/index.js",
    "dev:css": "tailwindcss -i ./public/tailwind.css -o ./dist/public/tailwind.css --watch",
    "watch:frontend": "tsc -p tsconfig.frontend.json --watch",
    "watch:backend": "tsc -p tsconfig.backend.json --watch"
  },
  "dependencies": {
    "@serialport/parser-readline": "^11.0.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "serialport": "^11.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "browser-sync": "^3.0.3",
    "concurrently": "^8.0.0",
    "nodemon": "^3.1.7",
    "shelljs": "^0.8.5",
    "tailwindcss": "^3.0.0",
    "typescript": "^5.6.3"
  }
}
