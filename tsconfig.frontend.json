{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES6",
    "outDir": "./public/js",
    "rootDir": "./public/ts",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "lib": ["ES2020", "DOM", "DOM.Iterable"]
  },
  "include": ["public/ts/**/*"],
  "exclude": ["node_modules", "dist"]
}
