{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",             // Output directory for compiled JS files
    "rootDir": ".",                 // Root directory for source files
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts", "public/**/*.ts"],  // Include both backend and frontend TypeScript
  "exclude": ["node_modules", "dist"]
}
